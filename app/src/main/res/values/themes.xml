<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bookslistorganizer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Strong_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Muda a cor do floating buttom  -->
        <item name="colorAccent">@color/purple_700</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/Strong_blue</item>
        <!-- navigationBarColor -->
        <item name="android:navigationBarColor">@color/Strong_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Bookslistorganizer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bookslistorganizer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Bookslistorganizer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>